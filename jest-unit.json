{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "roots": ["<rootDir>/src", "<rootDir>/libs/"],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/domain/**/*.ts",
    "src/**/application/**/*.ts",
    "!**/*.spec.ts",
    "!**/*.d.ts",
    "!**/*.interface.ts",
    "!**/*.module.ts",
    "!**/*.param.ts",
    "!**/*.params.ts",
    "!**/*.dto.ts",
    "!**/*.command.ts",
    "!**/*.query.ts",
    "!**/*.event.ts",
    "!**/*.handler.ts",
    "!**/*.port.ts",
    "!**/*.model.ts",
    "!**/*.object.ts",
    "!**/*.mapper.ts",
    "!**/*.abstract.ts"
  ],
  "moduleNameMapper": {
    "^@user/(.*)$": "<rootDir>/src/user/$1",
    "^@auth/(.*)$": "<rootDir>/src/auth/$1",
    "^@project/(.*)$": "<rootDir>/src/project/$1",
    "^@libs/jwt$": "<rootDir>/libs/jwt/src",
    "^@libs/exception$": "<rootDir>/libs/exception/src",
    "^@libs/logger$": "<rootDir>/libs/logger/src",
    "^@libs/slack$": "<rootDir>/libs/slack/src",
    "^@libs/filter$": "<rootDir>/libs/filter/src",
    "^@libs/interceptor$": "<rootDir>/libs/interceptor/src",
    "^@libs/database$": "<rootDir>/libs/database/src",
    "^@libs/response$": "<rootDir>/libs/response/src",
    "^@libs/common$": "<rootDir>/libs/common/src",
    "^@libs/test$": "<rootDir>/libs/test/src",
    "^@libs/token$": "<rootDir>/libs/token/src",
    "^@libs/token/(.*)$": "<rootDir>/libs/token/src/$1",
    "^@libs/redis$": "<rootDir>/libs/redis/src",
    "^@libs/redis/(.*)$": "<rootDir>/libs/redis/src/$1",
    "^@libs/decorators$": "<rootDir>/libs/decorators/src",
    "^@libs/decorators/(.*)$": "<rootDir>/libs/decorators/src/$1"
  },
  "coverageDirectory": "../coverage"
}
